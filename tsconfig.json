{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@model/*": ["model/*"],
      "@controller/*": ["controller/*"],
      "@middleware/*": ["middleware/*"],
      "@router/*": ["router/*"],
      "@service/*": ["service/*"],
      "@util/*": ["util/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
